[
  {
    "name": "pace",
    "image": "lplotni/pace-app",
    "cpu": 1024,
    "memory": 512,
    "environment": [
      {
        "name": "DATABASE_URL",
        "value": "postgres://pgtester:${data.aws_kms_secret.db.postgres_password}@db/pace"
      },
      {
        "name": "REDISHOST",
        "value": "redis"
      }
    ],
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "links": [
      "db",
      "redis"
    ],
    "essential": true
  },
  {
    "name": "db",
    "image": "postgres",
    "cpu": 0,
    "memory": 256,
    "environment": [
      {
        "name": "POSTGRES_USER",
        "value": "pgtester"
      },
      {
        "name": "POSTGRES_PASSWORD",
        "value": "${data.aws_kms_secret.db.postgres_password}"
      },
      {
        "name": "POSTGRES_DB",
        "value": "pace"
      }
    ],
    "portMappings": [
      {
        "containerPort": 5432,
        "hostPort": 5432
      }
    ],
    "essential": true
  },
  {
    "name": "redis",
    "image": "redis",
    "cpu": 0,
    "memory": 256,
    "essential": true
  }
]
